<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WanderPlan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/dark_grey</item>
        <item name="colorOnSurface">@color/dark_grey</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="Theme.WanderPlan" parent="Base.Theme.WanderPlan" />
    
    <!-- Card Styles -->
    <style name="WanderPlan.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="WanderPlan.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="WanderPlan.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="WanderPlan.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="strokeColor">@color/light_grey</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    
    <!-- FAB Style -->
    <style name="WanderPlan.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="WanderPlan.Text.Headline" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    
    <!-- Page Header Style -->
    <style name="WanderPlan.Text.PageHeader" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <style name="WanderPlan.Text.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="WanderPlan.Text.Body" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="WanderPlan.Text.Caption" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Input Field Styles -->
    <style name="WanderPlan.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/medium_grey</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="WanderPlan.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="elevation">8dp</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemTextAppearanceActive">@style/WanderPlan.BottomNavigation.TextActive</item>
        <item name="itemTextAppearanceInactive">@style/WanderPlan.BottomNavigation.TextInactive</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Bottom Navigation Text Styles -->
    <style name="WanderPlan.BottomNavigation.TextActive" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="WanderPlan.BottomNavigation.TextInactive" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Onboarding Tab Layout Style -->
    <style name="WanderPlan.TabLayout.Onboarding" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMinWidth">32dp</item>
        <item name="tabMaxWidth">32dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabPaddingTop">8dp</item>
        <item name="tabPaddingBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    
    <!-- Category Chip Styles -->
    <style name="WanderPlan.Chip.Category" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="WanderPlan.Chip.Category.Food" parent="WanderPlan.Chip.Category">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary</item>
        <item name="chipIcon">@drawable/ic_food</item>
    </style>
    
    <style name="WanderPlan.Chip.Category.Transport" parent="WanderPlan.Chip.Category">
        <item name="chipBackgroundColor">@color/secondary_variant</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="chipIcon">@drawable/ic_transport</item>
    </style>
    
    <style name="WanderPlan.Chip.Category.Hotel" parent="WanderPlan.Chip.Category">
        <item name="chipBackgroundColor">@color/info</item>
        <item name="android:textColor">@color/navy</item>
        <item name="chipIcon">@drawable/ic_accommodation</item>
    </style>
    
    <style name="WanderPlan.Chip.Category.Activities" parent="WanderPlan.Chip.Category">
        <item name="chipBackgroundColor">@color/warning</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="chipIcon">@drawable/ic_budget</item>
    </style>
    
    <style name="WanderPlan.Chip.Category.Shopping" parent="WanderPlan.Chip.Category">
        <item name="chipBackgroundColor">@color/lavender</item>
        <item name="android:textColor">@color/navy</item>
        <item name="chipIcon">@drawable/ic_shopping</item>
    </style>
    
    <style name="WanderPlan.Chip.Category.Other" parent="WanderPlan.Chip.Category">
        <item name="chipBackgroundColor">@color/medium_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIcon">@drawable/ic_settings</item>
    </style>
</resources>