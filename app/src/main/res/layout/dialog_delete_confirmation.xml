<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_card"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Delete Animation View -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_delete"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:lottie_fileName="delete.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_speed="1.0" />

    <!-- Delete Title -->
    <TextView
        android:id="@+id/tv_delete_title"
        style="@style/WanderPlan.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Delete Trip"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold" />

    <!-- Delete Message -->
    <TextView
        android:id="@+id/tv_delete_message"
        style="@style/WanderPlan.Text.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Are you sure you want to delete this item? This action cannot be undone."
        android:textColor="@color/text_primary"
        android:lineSpacingMultiplier="1.2" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btn_cancel"
            style="@style/WanderPlan.Button.Outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="@color/text_secondary" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/btn_delete"
            style="@style/WanderPlan.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />

    </LinearLayout>

</LinearLayout> 