<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="0dp"
            android:paddingBottom="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <!-- Welcome Message -->
                <TextView
                    android:id="@+id/tv_welcome"
                    style="@style/WanderPlan.Text.PageHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/welcome_message" />

                <!-- Info Panel -->
                <include
                    android:id="@+id/info_panel_container"
                    layout="@layout/info_panel_strip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Section Title -->
                <TextView
                    style="@style/WanderPlan.Text.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"
                    android:text="Upcoming Adventures" />

            </LinearLayout>

            <!-- Trips List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Empty State (when no trips) -->
            <LinearLayout
                android:id="@+id/layout_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Empty State Illustration -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="24dp"
                    android:alpha="0.5"
                    android:contentDescription="@string/no_trips_message"
                    android:src="@drawable/ic_trips"
                    app:tint="@color/medium_grey" />

                <!-- Empty State Message -->
                <TextView
                    style="@style/WanderPlan.Text.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_trips_message"
                    android:textColor="@color/medium_grey" />

                <!-- Call to Action -->
                <Button
                    android:id="@+id/btn_add_trip_empty"
                    style="@style/WanderPlan.Button.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingHorizontal="32dp"
                    android:text="@string/add_new_trip" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_trip"
        style="@style/WanderPlan.FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_new_trip"
        app:srcCompat="@drawable/ic_add" />

</RelativeLayout> 

