<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/WanderPlan.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Category Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary_light">

            <ImageView
                android:id="@+id/iv_category_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food"
                app:tint="@color/primary" />

        </androidx.cardview.widget.CardView>

        <!-- Expense Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Amount Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_expense_title"
                    style="@style/WanderPlan.Text.Body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dinner at Restaurant"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_expense_amount"
                    style="@style/WanderPlan.Text.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM45.00"
                    android:textColor="@color/warning"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Category and Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category"
                    style="@style/WanderPlan.Chip.Category.Food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/category_food"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tv_expense_date"
                    style="@style/WanderPlan.Text.Caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12 June, 2024"
                    android:textColor="@color/medium_grey" />

                <!-- Action Buttons -->
                <ImageButton
                    android:id="@+id/btn_edit_expense"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/edit_expense"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/medium_grey" />

                <ImageButton
                    android:id="@+id/btn_delete_expense"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/delete_expense"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/error" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 